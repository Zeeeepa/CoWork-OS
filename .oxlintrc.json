{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/npm/oxlint/configuration_schema.json",
  "rules": {
    "no-unused-vars": "warn",
    "no-explicit-any": "warn",
    "no-empty": "warn",
    "no-control-regex": "off",
    "no-require-imports": "warn"
  },
  "ignorePatterns": [
    "dist",
    "node_modules",
    ".tmp",
    "tmp",
    "connectors/**/dist"
  ]
}
